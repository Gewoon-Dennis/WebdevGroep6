@page
@model DatabaseImplementatie.Pages.Account

@{
    ViewData["Title"] = "Account";
}

<h5>Mijn Collectie</h5>


<div class="row" style=" display: flex; justify-content: space-between">
@{
    foreach (var comic in Model.CollectieList)
    {
        
            <div class="card mb-3" style="max-width: 45%; padding: unset;">
                <div class="row g-0">
                    <div class="col-4">
                        <img src="@comic.afbeelding" class="img-fluid rounded-start" alt="..." style="max-height: 100%" onerror="this.onerror=null;this.src='data:image/png;base64,';">
                    </div>
                    <div class="col-8">
                        <div class="card-body col-md-8">
                            <h5 class="card-title">@comic.uitgave_titel</h5>
                            <p class="card-text">Uitgever: @comic.uitgever_naam</p>
                            <p class="card-text">UitgaveJaar: @comic.uitgavejaar</p>
                            <p class="card-text">Schrijver: @comic.schrijver_naam</p>
                            <p class="card-text">Tekenaar: @comic.tekenaar_naam</p>
                            <p class="card-text">Conditie: @comic.kwaliteit_boek</p>
                            @if(@comic.gelezen == "True"){
                                <p class="card-text">Gelezen: Jazeker</p>
                            }
                            else
                            {
                                <p class="card-text">Gelezen: Nog niet</p>
                            }
                            <p class="card-text">Taal: @comic.taal</p>
                            <p class="card-text">Afmetingen: @comic.afmetingen</p>
                            <div class="a">
                                <p class="card-text"><small class="text-muted">Druk: @comic.druk</small></p>
                                
                            </div>
                            <div class="card-body col-md-12x"></div>
                                                            
                            <form method="post">
                                <input type="hidden" value="@comic.uitgave_id" asp-for="Uitgave_Id"/>
                                <button class="btn btn-dark" type="submit" asp-page-handler="UitCollectie">Heb ik toch niet</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
    }
    
}
</div>